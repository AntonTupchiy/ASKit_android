<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yellow_stripes">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/linearLayout1"
        >

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/imageView2"
            android:contentDescription="icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="profileName"
            android:id="@+id/txtViewName"
            android:layout_weight="1"
            android:textColor="#bb0705" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:id="@+id/button1"
            android:textAllCaps="false"
            android:background="@drawable/glass_style"
            android:textColor="#bb0705"
            android:textSize="25dp"
            android:clickable="true"
            android:onClick="profileButton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log out"
            android:id="@+id/btnLogOut"
            android:textAllCaps="false"
            android:layout_gravity="top"
            android:background="@drawable/glass_style"
            android:textColor="#bb0705"
            android:textSize="25dp"
            android:clickable="true"
            android:onClick="LogOut"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ask your question below:"
        android:id="@+id/textView3"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/linearLayout"
        android:layout_gravity="center_horizontal"
        android:textColor="#bb0705" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtQuestion"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="ASK it!"
        android:id="@+id/button"
        android:textAllCaps="false"

        android:layout_below="@+id/editText3"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/glass_style"
        android:textColor="#bb0705"
        android:textSize="25dp"
        android:clickable="true"
        android:onClick="AskQuestion"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/button2"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:id="@+id/linearLayout2"
        android:visibility="visible"
        android:weightSum="1">


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Chat Window"
            android:id="@+id/textView6"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.94"
            android:textColor="#bb0705"
            android:textSize="14dp"
            android:textIsSelectable="true"
            android:textStyle="italic"
            android:background="@drawable/glass_style" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.03">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/editText9"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/button9" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Send"
                android:id="@+id/button9"
                android:textAllCaps="false"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/glass_style"
                android:textSize="25dp"
                android:textColor="#bb0705" />
        </RelativeLayout>

        <TabHost
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/tabHost">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:background="@drawable/glass_style">

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"></TabWidget>

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <LinearLayout
                        android:id="@+id/tab1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical">


                        <ListView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/lViewallRooms" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tab2"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="jasdjakjdkasjdjajshdaskjdhsdkfjs"/>
                        </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tab3"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical"></LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </TabHost>

    </LinearLayout>

</LinearLayout>