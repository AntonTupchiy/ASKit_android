<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="45dp"
        android:weightSum="1">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:id="@+id/imageView4"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.24"
            android:layout_marginTop="45dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="64dp"
            android:text="Add icon"
            android:id="@+id/button4"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/glass_style"
            android:textColor="#bb0705"
            android:textSize="25dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.49">

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/editText10"
                android:layout_marginTop="74dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit E-mail"
                android:id="@+id/textView11"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="34dp"
                android:textColor="#bb0705"
                android:textSize="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit password"
                android:id="@+id/textView12"
                android:layout_below="@+id/editText10"
                android:layout_centerHorizontal="true"
                android:textColor="#bb0705"
                android:textSize="25dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editText11"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/textView11" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Old password"
                android:id="@+id/textView13"
                android:layout_alignBottom="@+id/editText11"
                android:textColor="#bb0705"
                android:textSize="18dp"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New password"
                android:id="@+id/textView14"
                android:layout_below="@+id/textView13"
                android:layout_alignParentStart="true"
                android:layout_marginTop="34dp"
                android:textColor="#bb0705"
                android:textSize="18dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editText12"
                android:layout_alignBottom="@+id/textView14"
                android:layout_alignStart="@+id/editText11"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textView15"
                android:layout_below="@+id/textView14"
                android:layout_alignParentStart="true"
                android:layout_marginTop="31dp"
                android:textSize="18dp"
                android:textColor="#bb0705" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText13"
                android:layout_alignBottom="@+id/textView15"
                android:layout_alignStart="@+id/editText12"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:text="Save changes"
            android:id="@+id/button10"
            android:textAllCaps="false"
            android:layout_weight="0.00"
            android:background="@drawable/glass_style"
            android:textColor="#bb0705"
            android:textSize="25dp" />

    </LinearLayout>
</LinearLayout>